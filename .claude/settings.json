{
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "Bash(npm run *)",
      "Bash(npx *)",
      "Bash(git *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(tsc *)",
      "WebFetch",
      "WebSearch",
      "TodoWrite",
      "NotebookEdit"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(git push --force *)",
      "Bash(git reset --hard *)"
    ]
  },
  "settings": {
    "defaultMode": "plan",
    "allProjectMcpServersEnabled": true,
    "hooksDisabled": false
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git commit*)",
        "hooks": [
          {
            "type": "command",
            "command": "npm run check 2>&1 | tail -20; exit ${PIPESTATUS[0]}"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$CLAUDE_TOOL_INPUT\" | grep -qi '\\.env\\|secret\\|password\\|api.key\\|token'; then echo 'WARNING: Possible sensitive content detected in file operation'; fi"
          }
        ]
      }
    ]
  }
}
